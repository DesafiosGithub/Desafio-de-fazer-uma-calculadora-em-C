#include <stdio.h>

int main()
{
	char escolha;
	float num1, num2, resultado;
	
		    printf("Digite um operador (+,-,*,/):\n");
	scanf("%c", &escolha);
	
		printf("Digite o primeiro numerador\n");
	scanf("%f", &num1);
	
	     printf("Digite o segundo numerador:\n");
	scanf("%f", &num2);
	
	switch (escolha) {
	
	        case '+':
	         resultado = num1 + num2;
	    break;
	    
	        case '-':
	         resultado = num1 - num2;
	    break;
	    
	        case '*':
	         resultado = num1 * num2;
	    break;
	    
	        case '/':
	         resultado = num1 / num2;
	    break;
	    
	    default:
	    	printf("Por favor, coloque números e operadores válidos!");
	    	
	return 0;
}


printf(" O resultado e: %1.f ", resultado);



}
